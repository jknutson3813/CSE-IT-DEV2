<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{site_set}}</heading>
			<input type="text" name="site_name" size="30" value="My Maian Cart System">
				<head>{{site_name}}</head>
			</input>
		</group>
		<group>
			<heading>{{db_set}}</heading>
			<input type="text" name="dbprefix" size="30" value="mc_">
				<head>{{db_pre}}</head>
				<optional>true</optional>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_pass" size="30" value="pass">
				<head>{{ad_pass}}</head>
				<handle>__ad_pass</handle>
			</input>
			<input type="text" name="admin_email" size="30" value="admin" softmail="true">
				<head>{{ad_email}}</head>
				<handle>__email_address</handle>
			</input>
		</group>
	</settings>
	<db>mysql</db>
	<files>
		<exclude>install/*</exclude>
		<exclude>install/*/*</exclude>
		<exclude>install/*/*/*</exclude>
		<exclude>install/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*</exclude>
		<exclude>content/products/demo_g1.gif</exclude>
		<exclude>content/products/demo_g2.gif</exclude>
		<exclude>content/products/demo_g3.gif</exclude>
		<exclude>content/products/demo_icon_9.jpg</exclude>
		<exclude>content/products/demo_icon_10.jpg</exclude>
		<exclude>content/products/demo_icon_11.jpg</exclude>
		<exclude>content/products/demo_icon_16.jpg</exclude>
		<exclude>content/products/demo_icon_17.jpg</exclude>
		<exclude>content/products/demo_icon_18.jpg</exclude>
		<exclude>content/products/demo_icon_19.jpg</exclude>
	</files>
</softinstall>