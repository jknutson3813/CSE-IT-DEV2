<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{site_set}}</heading>
			<input type="text" name="site_name" size="30" value="openSIS">
				<head>{{site_name}}</head>
			</input>
			<input type="text" name="Beg_date" size="30" value="">
			<head>{{beg_date}}</head>
			<exp>{{s_date_exp}}</exp>
			<handle>__date</handle>
			</input>
			<input type="text" name="End_date" size="30" value="">
			<head>{{end_date}}</head>
			<exp>{{s_date_exp}}</exp>
			<handle>__date</handle>
			</input>
			<input type="checkbox" name="sample_data" value="on">
				<head>{{sample_data}}</head>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_pass" size="30" value="password1!">
				<head>{{ad_pass}}</head>
				<handle>__ad_pass</handle>
			</input>
			<input type="text" name="admin_fname" size="30" value="System">
				<head>{{f_name}}</head>
			</input>
			<input type="text" name="admin_lname" size="30" value="Administrator">
				<head>{{l_name}}</head>
			</input>
		</group>
	</settings>
	<db>mysql</db>
	<files>
		<exclude>install/*</exclude>
		<exclude>install/*/*</exclude>
		<exclude>install/*/*/*</exclude>
		<exclude>install/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*</exclude>
	</files>
</softinstall>