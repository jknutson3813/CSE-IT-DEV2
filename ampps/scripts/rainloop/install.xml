<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{site_set}}</heading>
			<input type="text" name="site_name" size="30" value="RainLoop Webmail">
				<head>{{site_name}}</head>
			</input>
		</group>
		<group>
			<heading>{{imap}}</heading>
			<input type="text" name="imap" size="30" value="imap.site.com" quick_install="1">
				<head>{{imap_ser}}</head>
				<exp>{{exp_imap_ser}}</exp>
				<optional>true</optional>
			</input>
			<input type="text" name="imap_port" size="30" value="143" quick_install="1">
				<head>{{imap_port}}</head>
			</input>
			<input type="select">
				<select name="imap_conn_prefix" quick_install="1">
					<option value="None">None</option>
					<option value="SSL">SSL/TLS</option>
					<option value="TLS">STARTTLS</option>
				</select>
				<head>{{conn_type}}</head>
				<optional>true</optional>
			</input>
		</group>
		<group>
			<heading>{{smtp}}</heading>
			<input type="text" name="smtp" size="30" value="smtp.site.com" quick_install="1">
				<head>{{smtp_ser}}</head>
				<exp>{{exp_imap_ser}}</exp>
				<optional>true</optional>
			</input>			
			<input type="text" name="smtp_port" size="30" value="25" quick_install="1">
				<head>{{smtp_port}}</head>
			</input>
			<input type="select">
				<select name="smtp_conn_prefix" quick_install="1">
					<option value="None">None</option>
					<option value="SSL">SSL/TLS</option>
					<option value="TLS">STARTTLS</option>
				</select>
				<head>{{conn_type}}</head>
				<optional>true</optional>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_pass" size="30" value="pass">
				<head>{{ad_pass}}</head>
				<handle>__ad_pass</handle>
			</input>
		</group>
		<group>
			<heading>{{ad_lang}}</heading>
			<input type="select">
				<select name="language">
					<option value="en">English</option>
					<option value="ar_SA">Arabic</option>
					<option value="bg_BG">Bulgarian</option>
					<option value="cs_CZ">Czech</option>
					<option value="da_DK">Danish</option>
					<option value="de_DE">German</option>
					<option value="el_GR">Greek</option>
					<option value="en_GB">English (UK)</option>
					<option value="es_ES">Spanish</option>
					<option value="et_EE">Estonian</option>
					<option value="fa_IR">Persian</option>
					<option value="fi_FI">Finnish</option>
					<option value="fr_FR">French (France)</option>
					<option value="hu_HU">Hungarian</option>
					<option value="is_IS">Icelandic</option>
					<option value="it_IT">Italian</option>
					<option value="ja_JP">Japanese</option>
					<option value="ko_KR">Korean</option>
					<option value="lt_LT">Lithuanian</option>
					<option value="lv_LV">Latvian</option>
					<option value="nb_NO">Norwegian</option>
					<option value="nl_NL">Dutch</option>
					<option value="pl_PL">Polish</option>
					<option value="pt_BR">Portuguese (Brazil)</option>
					<option value="pt_PT">Portuguese (Portugal)</option>
					<option value="ro_RO">Romanian</option>
					<option value="ru_RU">Russian</option>
					<option value="sk_SK">Slovak</option>
					<option value="sl_SI">Slovenian</option>
					<option value="sv_SE">Swedish</option>
					<option value="tr_TR">Turkish</option>
					<option value="uk_UA">Ukrainian</option>
					<option value="zh_CN">Simplified Chinese (China)</option>
					<option value="zh_TW">Traditional Chinese (Taiwan)</option>
				</select>
				<head>{{select_end_lang}}</head>
			</input>
			<input type="select">
				<select name="admin_language">
					<option value="en">English</option>
					<option value="cs_CZ">Czech</option>
					<option value="da_DK">Danish</option>
					<option value="de_DE">German</option>
					<option value="es_ES">Spanish</option>
					<option value="fa_IR">Persian</option>
					<option value="fi_FI">Finnish</option>
					<option value="fr_FR">French (France)</option>
					<option value="hu_HU">Hungarian</option>
					<option value="it_IT">Italian</option>
					<option value="ja_JP">Japanese</option>
					<option value="lt_LT">Lithuanian</option>
					<option value="nb_NO">Norwegian (bokmal)</option>
					<option value="nl_NL">Dutch</option>
