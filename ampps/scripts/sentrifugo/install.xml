<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{site_set}}</heading>
			<input type="text" name="site_name" size="30" value="Sentrifugo">
				<head>{{site_name}}</head>
			</input>
		</group>
		<group>
			<heading>{{smtp}}</heading>
			<input type="text" name="smtp_ser" size="30" value="smtp.site.com" quick_install="1">
				<head>{{smtp_ser}}</head>
			</input>
			<input type="text" name="smtp_port" size="30" value="25" quick_install="1">
				<head>{{smtp_port}}</head>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" disabled="disabled" value="EMPP0001">
				<head>{{ad_name}}</head>
				<optional>true</optional>
			</input>
			<input type="text" name="admin_pass" size="30" value="pass">
				<head>{{ad_pass}}</head>
				<handle>__admin_pass</handle>
			</input>
			<input type="text" name="admin_email" size="30" value="admin" softmail="true">
				<head>{{ad_email}}</head>
				<handle>__email_address</handle>
			</input>	
		</group>
	</settings>
	<db>mysql</db>
	<files>
		<exclude>install/*</exclude>
		<exclude>install/*/*</exclude>
		<exclude>install/*/*/*</exclude>
		<exclude>install/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*/*/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*/*/*/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*/*/*/*/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*/*/*/*/*/*/*/*/*</exclude>
	</files>
</softinstall>