<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{site_set}}</heading>
			<input type="text" name="site_name" size="30" value="GNU social">
				<head>{{site_name}}</head>
			</input>
			<input type="select">
				<select name="site_profile">
					<option value="community">Community</option>
					<option value="public">Public (open registration)</option>
					<option value="singleuser">Single User</option>
					<option value="private">Private (no federation)</option>
				</select>
				<head>{{select_type}}</head>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_pass" size="30" value="password">
				<head>{{ad_pass}}</head>
				<handle>__admin_pass</handle>
			</input>
			<input type="text" name="admin_email" size="30" value="admin" softmail="true">
				<head>{{ad_email}}</head>
				<handle>__email_address</handle>
			</input>							
		</group>
	</settings>
	<db>mysql</db>
</softinstall>