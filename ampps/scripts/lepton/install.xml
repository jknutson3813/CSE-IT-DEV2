<softinstall xmlns="http://www.softaculous.com">
	<settings>
	    <group>
			<heading>{{site_set}}</heading>
			<input type="text" name="site_name" size="30" value="LEPTON CMS">
				<head>{{site_name}}</head>
			</input>
		</group>
		<group>
			<heading>{{db_set}}</heading>
			<input type="text" name="dbprefix" size="30" value="lp_">
				<head>{{db_pre}}</head>
				<optional>true</optional>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_email" size="30" value="admin" softmail="true">
				<head>{{ad_email}}</head>
				<handle>__email_address</handle>
			</input>
			<input type="text" name="admin_pass" size="30" value="password">
				<head>{{ad_pass}}</head>
				<handle>__ad_pass</handle>
			</input>
		</group>
	</settings>
	<db>mysql</db>
	<files>
		<exclude>install/*</exclude>
		<exclude>install/*/*</exclude>
		<exclude>install/*/*/*</exclude>
		<exclude>install/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*/*/*/*</exclude>
		<exclude>modules/droplets/install/*</exclude>
		<exclude>modules/cookie/install/*</exclude>
		<exclude>modules/lib_search/install/*</exclude>
		<exclude>modules/lib_fomantic/dist/themes/default/assets/fonts_292/*</exclude>
	</files>
</softinstall>